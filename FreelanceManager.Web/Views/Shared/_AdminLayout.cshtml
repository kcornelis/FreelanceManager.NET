<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Freelance project manager">
    <meta name="author" content="Cornelis Kevin">
    <title>@(ViewBag.Title ?? "Freelance project manager")</title>
    <link href="/bundles/css/all" type="text/css" rel="stylesheet" />
    <script src="/bundles/js/jquery" type="text/javascript"></script>
    <script src="/bundles/js/modernizr" type="text/javascript"></script>
</head>

<body>

    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Freelance Manager ADMIN</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/admin/accounts">Accounts</a></li>
                </ul>
                @if (!string.IsNullOrWhiteSpace(ViewBag.UserName))
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li id="fat-menu" class="dropdown">
                            <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown">@ViewBag.UserName <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                                @if (ViewBag.IsAdmin)
                                {
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/admin/accounts">Admin</a></li>
                                }
                                <li role="presentation">
                                    <a role="menuitem" tabindex="-1" href="/account">Account</a>
                                </li>
                                <li role="presentation">
                                    <a role="menuitem" tabindex="-1" href="/account/logout">Logout</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container">
        @if (IsSectionDefined("Menu"))
        {
            <ul class="nav nav-tabs">
                @RenderSection("Menu")
            </ul>
        }

        @RenderBody()
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/bundles/js/common" type="text/javascript"></script>
    @RenderSection("Scripts", false)
</body>
</html>
