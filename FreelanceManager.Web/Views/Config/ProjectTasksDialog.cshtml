<div class="modal fade" id="projectTasksDialog" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" data-bind="with: selectedProjectTasks">
        <form role="form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-bind="click: cancelSaveTasks" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Project Tasks</h4>
                </div>
                <div class="modal-body">
                    <div data-bind="foreach: tasks">
                        <div class="form-group">
                            <label data-bind="text: name"></label>
                            <input type="text" data-bind="value: rate" class="form-control" placeholder="Rate">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="pull-left">
                        <i class="icon-repeat" data-bind="visible: isBusy"></i><span data-bind="text: message"></span>
                    </div>
                    <button type="button" class="btn btn-default" data-bind="click: cancelSaveTasks">Close</button>
                    <button type="submit" class="btn btn-primary" data-bind="enable: canSaveTasks, click: saveTasks, text: updateText">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

