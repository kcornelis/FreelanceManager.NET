@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<FreelanceManager.Web.Tools.ExcelImportResult>
@using System.Linq
@{
    ViewBag.Title = "Time Registration - Import";
}

@section Scripts{
    <script src="/bundles/viewmodels/timeregistration" type="text/javascript"></script>
    <script type="text/javascript">

        //var viewModel = new TimeRegistrationImportViewModel();

        //$(document).ready(function () {

        //    ko.applyBindings(viewModel);
        //});
    </script>
}

<h1 class="text-center">Import Time Registrations</h1>

<div class="alert alert-success">
    @Model.Success rows imported
</div>

@if (Model.Errors.Any())
{
    <div class="alert alert-danger">
        Some errors occurred while importing the excel
    </div>
    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>Row</th>
                <th>Error</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var error in Model.Errors)
            {
                <tr>
                    <td>@error.Key</td>
                    <td>@error.Value</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/timeregistration">Go back to the overview</a>






